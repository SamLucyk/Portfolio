<div id="contact-content" class="container page-content hide">
    <div class="row col-sm-10 col-sm-offset-1">
        <div class="col-sm-4">
            <img class="frontimg" src="sources/self_photo.png">
            <div class="contact-img-caption form-label">I'd love to hear from you!</div>
        </div>
        <div class="col-sm-8">
            <form id="email-form">
                <div class="form-group col-sm-6">
                    <div class="form-label">First Name</div>
                    <input type="text" id="first" class="form-control input-lg" />
                </div>
                <div class="form-group col-sm-6">
                    <div class="form-label">Last Name</div>
                    <input type="text" id="last" class="form-control input-lg" />
                </div>
                <div class="form-group col-sm-12">
                    <div class="form-label">Return Email Address</div>
                    <input type="text" id="from-email"  class="form-control input-lg" />
                </div>
                <div class="form-group col-sm-12">
                    <div class="form-label">Message</div>
                    <textarea rows="4" cols="50" id="msg"  class="form-control input-lg"></textarea>
                    <div class="col-xs-12 mt20">
                        <button class="btn btn-lg btn-block btn-success">Send</button>
                    </div>
                </div>
            </form>
        </div>
        <div id="email-confirm">Email Sent. Thank you! I will get back to you soon.</div>
    </div>
</div>
<script>
    $('#email-confirm').hide();
    var socket = io();
    $('#email-form').submit(function(){
        console.log("SUBMIT");
        var data = {first:$('#first').val(), last:$('#last').val(), msg:$('#msg').val(), fromEmail:$('#from-email').val()};
        socket.emit('send email', data);
        return false;
    });
    socket.on('email sent', function(){
        $('#email-form').hide();
        $('#email-confirm').show();
    });
</script>